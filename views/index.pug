extends layout

block content  
  h1 List of Books
  p
    a.button(href='/books/createbook') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td= book.title
          td= book.author
          td= book.genre
          td= book.year
          td
            a.button(href='/books/' + book.id) Edit
            a.button(href='/deleteBook/' + book.id) Delete

